<script>
    function checkStockAlert() {
        fetch('/api/stock/alertes')
            .then(response => response.json())
            .then(data => {
                if (data.length > 0) {
                    let message = " ‚ö†Ô∏è Faible quantit√© :\n";
                    data.forEach(produit => {
                        message += `üö®${produit.nom} (Qt√©: ${produit.quantite})\n`;
                    });

                    Swal.fire({
                        title: "Alerte Stock !",
                        text: message,
                        icon: "warning",
                        confirmButtonText: "OK"
                    });
                }
            })
            .catch(error => console.error('Erreur API:', error));
    }

    // V√©rifie toutes les 10 secondes
    setInterval(checkStockAlert, 10000);
</script>
