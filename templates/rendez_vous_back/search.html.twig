{% extends 'base2.html.twig' %}

{% block content %}
<div class="table-responsive">
    <table class="table table-striped table-hover w-100">
        <thead class="table-dark">
            <tr>
                <th style="width: 50px;">ID</th>
                <th>Date</th>
                <th>Statut</th>
                <th>Motif</th>
                <th>Patient</th>
                <th>Médecin</th>
                <th>Date de Création</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for rendez_vou in rendez_vouses %}
                <tr>
                    <td>{{ rendez_vou.id }}</td>
                    <td>{{ rendez_vou.date ? rendez_vou.date|date('Y-m-d') : '' }}</td>
                    <td>{{ rendez_vou.statut }}</td>
                    <td>{{ rendez_vou.motif }}</td>
                    <td>{{ rendez_vou.patient ? rendez_vou.patient.email : 'N/A' }}</td>
                    <td>{{ rendez_vou.medecin ? rendez_vou.medecin.email : 'N/A' }}</td>
                    <td>{{ rendez_vou.dateCreation ? rendez_vou.dateCreation|date('Y-m-d') : '' }}</td>
                    <td>
                        <a href="{{ path('app_rendez_vous_show_back', {'id': rendez_vou.id}) }}" class="btn btn-info btn-sm">👁️</a>
                        <a href="{{ path('app_rendez_vous_edit_back', {'id': rendez_vou.id}) }}" class="btn btn-primary btn-sm">📝</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="10" class="text-center">Aucun rendez-vous trouvé</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
