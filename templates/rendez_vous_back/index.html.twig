{% extends 'base2.html.twig' %}

{% block title %}Liste des Rendez-Vous{% endblock %}

{% block content %}
{% set query = query|default('') %}
<div class="container-fluid my-4"> <!-- Use container-fluid for full-width -->
    <h1 class="mb-4 text-center">Liste des Rendez-Vous</h1>

    <!-- Barre de recherche -->
    <div class="mb-3">
        <input type="text" id="searchInput" class="form-control" placeholder="Rechercher un rendez-vous..." value="{{ query }}">
    </div>

    <!-- Conteneur des résultats -->
    <div id="resultContainer" class="d-flex justify-content-center">
        <div class="table-responsive w-100"> <!-- Table stretches across the full width -->
            <table class="table table-striped table-hover table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Date</th>
                        <th>Statut</th>
                        <th>Motif</th>
                        <th>Patient</th>
                        <th>Médecin</th>
                        <th>Date de Création</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for rendez_vou in rendez_vouses %}
                        <tr>
                            <td>{{ rendez_vou.id }}</td>
                            <td>{{ rendez_vou.date ? rendez_vou.date|date('Y-m-d H:i:s') : '' }}</td>
                            <td>{{ rendez_vou.statut }}</td>
                            <td>{{ rendez_vou.motif }}</td>
                            <td>{{ rendez_vou.patient ? rendez_vou.patient.nom : 'N/A' }}</td>
                            <td>{{ rendez_vou.medecin ? rendez_vou.medecin.nom : 'N/A' }}</td>
                            <td>{{ rendez_vou.dateCreation ? rendez_vou.dateCreation|date('Y-m-d H:i:s') : '' }}</td>
                            <td>
                                <a href="{{ path('app_rendez_vous_show_back', {'id': rendez_vou.id}) }}" class="btn btn-info btn-sm">Voir</a>
                                <a href="{{ path('app_rendez_vous_edit_back', {'id': rendez_vou.id}) }}" class="btn btn-primary btn-sm">Éditer</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="8" class="text-center">Aucun rendez-vous trouvé</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <!-- Bouton pour générer le PDF -->
    <div class="mt-3 text-center">
        <button id="generatePdfButton" class="btn btn-danger">Générer le PDF</button>
    </div>

    <div class="mt-3 text-center">
        <a href="{{ path('app_rendez_vous_new_back') }}" class="btn btn-success">Créer un nouveau rendez-vous</a>
    </div>

</div>

<script>
    document.addEventListener("DOMContentLoaded", () => {
        const searchInput = document.getElementById("searchInput");
        const resultsContainer = document.getElementById("resultContainer");

        searchInput.addEventListener("input", () => {
            const query = searchInput.value;

            if (query.length > 2) { // Optionnel: démarre la recherche après 3 caractères
                fetch('/rendez/back/rendez-vous/recherche?q=' + encodeURIComponent(query), {
                    headers: { "X-Requested-With": "XMLHttpRequest" },
                })
                .then(response => response.text())
                .then(html => {
                    resultsContainer.innerHTML = html; // Injecte les résultats dans le container
                })
                .catch(error => {
                    console.error('Error during the fetch operation:', error);
                });
            }
        });

        // Génération du PDF avec redirection vers la route PDF
        document.getElementById('generatePdfButton').addEventListener('click', function() {
            // Utilise une requête GET pour récupérer le PDF
            window.location.href = '{{ path('app_rendez_vous_pdf') }}'; // Redirige vers le PDF
        });
    });
</script>

{% endblock %}
