{% extends 'base2.html.twig' %}

{% block title %}Liste des Rendez-Vous{% endblock %}

{% block content %}
<div class="container my-4">
    <h1 class="mb-4">Liste des Rendez-Vous</h1>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Date</th>
                    <th>Statut</th>
                    <th>Motif</th>
                    <th>Patient</th>
                    <th>Médecin</th>
                    <th>Date de Création</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for rendez_vou in rendez_vouses %}
                    <tr>
                        <td>{{ rendez_vou.id }}</td>
                        <td>{{ rendez_vou.date ? rendez_vou.date|date('Y-m-d H:i:s') : '' }}</td>
                        <td>{{ rendez_vou.statut }}</td>
                        <td>{{ rendez_vou.motif }}</td>
                        <td>{{ rendez_vou.patient ? rendez_vou.patient.nom : 'N/A' }}</td>
                        <td>{{ rendez_vou.medecin ? rendez_vou.medecin.nom : 'N/A' }}</td>
                        <td>{{ rendez_vou.dateCreation ? rendez_vou.dateCreation|date('Y-m-d H:i:s') : '' }}</td>
                        <td>
                            <a href="{{ path('app_rendez_vous_show_back', {'id': rendez_vou.id}) }}" class="btn btn-info btn-sm">Voir</a>
                            <a href="{{ path('app_rendez_vous_edit_back', {'id': rendez_vou.id}) }}" class="btn btn-primary btn-sm">Éditer</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="8" class="text-center">Aucun rendez-vous trouvé</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="mt-3">
        <a href="{{ path('app_rendez_vous_new_back') }}" class="btn btn-success">Créer un nouveau rendez-vous</a>
    </div>
</div>
{% endblock %}
