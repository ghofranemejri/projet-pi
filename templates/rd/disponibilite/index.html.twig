{% extends 'base2.html.twig' %}

{% block title %}Liste des Disponibilités{% endblock %}

{% block content %}
<div class="container my-4">
    <h1 class="mb-4">Liste des Disponibilités</h1>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Médecin</th>
                    <th>Jour</th>
                    <th>Heure de début</th>
                    <th>Heure de fin</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for disponibilite in disponibilites %}
                    <tr>
                        <td>{{ disponibilite.id }}</td>
                        <td>{{ disponibilite.medecin.email}}</td>
                        <td>{{ disponibilite.jour ? disponibilite.jour|date('Y-m-d') : '' }}</td>
                        <td>{{ disponibilite.heureDebut ? disponibilite.heureDebut|date('H:i') : '' }}</td>
                        <td>{{ disponibilite.heureFin ? disponibilite.heureFin|date('H:i') : '' }}</td>
                        <td>
                            <a href="{{ path('app_disponibilite_show', {'id': disponibilite.id}) }}" class="btn btn-info btn-sm">Voir</a>
                            <a href="{{ path('app_disponibilite_edit', {'id': disponibilite.id}) }}" class="btn btn-primary btn-sm">Modifier</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6" class="text-center">Aucune disponibilité trouvée</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="mt-3">
        <a href="{{ path('app_disponibilite_new') }}" class="btn btn-success">Créer une nouvelle disponibilité</a>
    </div>
</div>
{% endblock %}
