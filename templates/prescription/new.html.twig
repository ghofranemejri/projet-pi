{% extends 'baseback.html.twig' %}

{% block title %}Créer une Prescription{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0" style="margin-bottom:3%;">Créer une Prescription</h5>
        </div><br><br>
        <div class="card-body">
            {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">Date de début</label>
                    {{ form_widget(form.datedeb, {'attr': {'class': 'form-control' ~ (form.vars.submitted and form.datedeb.vars.errors|length > 0  ? ' is-invalid' : '')}}) }}
                    {% if form.vars.submitted %}
                        {% for error in form.datedeb.vars.errors %}
                            <div class="invalid-feedback">{{ error.message }}</div>
                        {% endfor %}
                    {% endif %}
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label">Date de fin</label>
                    {{ form_widget(form.datefin, {'attr': {'class': 'form-control' ~ (form.vars.submitted and form.datefin.vars.errors|length > 0  ? ' is-invalid' : '')}}) }}
                    {% if form.vars.submitted %}
                        {% for error in form.datefin.vars.errors %}
                            <div class="invalid-feedback">{{ error.message }}</div>
                        {% endfor %}
                    {% endif %}
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label">Adresse</label>
                {{ form_widget(form.address, {'attr': {'class': 'form-control' ~ (form.address.vars.errors|length > 0  ? ' is-invalid' : '')}}) }}
                {% if form.vars.submitted %}
                    {% for error in form.address.vars.errors %}
                        <div class="invalid-feedback">{{ error.message }}</div>
                    {% endfor %}
                {% endif %}
            </div>

            <div class="mb-3">
                <label class="form-label">Patient</label>
                {{ form_widget(form.patient, {'attr': {'class': 'form-control select2' ~ (form.vars.submitted and form.patient.vars.errors|length > 0 ? ' is-invalid' : '')}}) }}
                {% if form.vars.submitted %}
                    {% for error in form.patient.vars.errors %}
                        <div class="invalid-feedback">{{ error.message }}</div>
                    {% endfor %}
                {% endif %}
            </div>

            <div class="d-flex justify-content-between">
                <a href="{{ path('prescription_index') }}" class="btn btn-secondary">Annuler</a>
                <button type="submit" class="btn btn-success">Créer</button>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
</div>
<script>
// Désactiver le comportement de validation par défaut de Bootstrap
document.querySelector('form.needs-validation').addEventListener('submit', function(event) {
    // Empêche le comportement par défaut de Bootstrap
    event.preventDefault();
    // Forcer l'envoi du formulaire même avec des erreurs
    this.submit();
}, false);

</script>
{% endblock %}
