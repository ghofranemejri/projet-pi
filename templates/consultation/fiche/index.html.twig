{% extends 'base2.html.twig' %}

{% block title %}Liste des Fiches{% endblock %}

{% block content%}
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h1 class="card-title">Liste des Fiches</h1>
                        <a href="{{ path('app_fiche_new') }}" class="btn btn-primary float-end">
                            <i class="bi bi-plus-circle"></i> Nouvelle Fiche
                        </a>
                    </div>
                    <div class="card-body">
                        {% for message in app.flashes('success') %}
                            <div class="alert alert-success">
                                {{ message }}
                            </div>
                        {% endfor %}

                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Consultation</th>
                                        <th>Patient</th>
                                        <th>Médecin</th>
                                        <th>Date</th>
                                        <th>Statut</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                {% for fiche in fiches %}
                                    <tr>
                                        <td>{{ fiche.id }}</td>
                                        <td>
                                            <a href="{{ path('app_consultation_show', {'id': fiche.consultation.id}) }}">
                                                {{ fiche.consultation }}
                                            </a>
                                        </td>
                                        <td>{{ fiche.nomPatient }}</td>
                                        <td>{{ fiche.nomMedecin }}</td>
                                        <td>{{ fiche.date ? fiche.date|date('Y-m-d H:i') : '' }}</td>
                                        <td>
                                            <span class="badge bg-{{ fiche.status == 'completed' ? 'success' : 
                                                                    fiche.status == 'in_progress' ? 'info' :
                                                                    fiche.status == 'pending' ? 'warning' : 'danger' }}">
                                                {{ fiche.status == 'completed' ? 'Terminée' :
                                                   fiche.status == 'in_progress' ? 'En cours' :
                                                   fiche.status == 'pending' ? 'En attente' : 'Annulée' }}
                                            </span>
                                        </td>
                                        <td>
                                            <a href="{{ path('app_fiche_show', {'id': fiche.id}) }}" class="btn btn-info btn-sm">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a href="{{ path('app_fiche_edit', {'id': fiche.id}) }}" class="btn btn-warning btn-sm">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <form method="post" action="{{ path('app_fiche_delete', {'id': fiche.id}) }}" style="display: inline-block" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette fiche ?');">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ fiche.id) }}">
                                                <button class="btn btn-danger btn-sm">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="7" class="text-center">Aucune fiche trouvée</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
