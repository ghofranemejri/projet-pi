{% extends 'base2.html.twig' %}

{% block title %}Orders List{% endblock %}

{% block content %}
<div class="container mt-4">
    <h1>Orders List</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>User</th>
                <th>Product</th>
                <th>Quantity</th>
                <th>Total Price</th>
                <th>Order Date</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for order in orders %}
            <tr>
                <td>{{ order.id }}</td>
                <td>{{ order.user.email }}</td>  <!-- Afficher l'e-mail de l'utilisateur -->
                <td>{{ order.product.id}}</td>  <!-- Afficher le nom du produit -->
                <td>{{ order.quantite }}</td>  <!-- Afficher la quantité -->
                <td>${{ order.prixTotal }}</td>  <!-- Afficher le prix total -->
                <td>{{ order.dateCommande|date('Y-m-d H:i:s') }}</td>  <!-- Afficher la date de commande -->
                <td>
                    <span class="badge 
                        {% if order.statut == 'en attente' %}bg-warning
                        {% elseif order.statut == 'traite' %}bg-success
                        {% else %}bg-danger
                        {% endif %}">
                        {{ order.statut }}  <!-- Afficher le statut avec un badge coloré -->
                    </span>
                </td>
                <td>
                    <a href="{{ path('app_order_show', {'id': order.id}) }}" class="btn btn-info btn-sm">
                        <i class="bi bi-eye"></i> View
                    </a>
                    <a href="{{ path('app_order_edit', {'id': order.id}) }}" class="btn btn-warning btn-sm">
                        <i class="bi bi-pencil"></i> Edit
                    </a>
                    <form action="{{ path('app_order_delete', {'id': order.id}) }}" method="post" style="display: inline-block">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ order.id) }}">
                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure?')">
                            <i class="bi bi-trash"></i> Delete
                        </button>
                    </form>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8" class="text-center">No orders found.</td>  <!-- Message si aucune commande n'est trouvée -->
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_products_index') }}" class="btn btn-primary">Back to Products</a>
</div>
{% endblock %}