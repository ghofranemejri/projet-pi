{% extends 'base.html.twig' %}

{% block title %}Shopping Cart{% endblock %}

{% block body %}
<section class="inner-page" style="margin-top: 100px;">
    <div class="container mt-4">
        <div class="section-title">
            <h2>Shopping Cart</h2>
            <p>Review your selected items</p>
        </div>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">
                {{ message }}
            </div>
        {% endfor %}

        <!-- Affichage des commandes en attente -->
        {% if orders is not empty %}
            <div class="mt-5">
                <h3>Orders in Waiting</h3>

                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Order ID</th>
                            <th>Product</th>
                            <th>Quantity</th>
                            <th>Total Price</th>
                            <th>Status</th>
                            <th>Order Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for order in orders %}
                            <tr>
                                <td>{{ order.id }}</td>
                                <td>{{ order.product.id }}</td>
                                <td>{{ order.quantite }}</td>
                                <td>${{ order.prixTotal }}</td>
                                <td>{{ order.statut }}</td>
                                <td>{{ order.dateCommande | date('d/m/Y H:i') }}</td>
                                <td>
                                    <!-- Bouton Delete -->
                                    <form action="{{ path('app_order_delete', {'id': order.id}) }}" method="POST" style="display: inline;">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ order.id) }}">
                                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this order?')">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
                <!-- Checkout Button -->
                <form action="{{ path('app_order_checkout') }}" method="POST">
                    <button type="submit" class="btn btn-primary btn-lg" onclick="return confirm('Proceed to checkout and send orders via email?')">Checkout</button>
                </form>
            </div>
        {% else %}
            <div class="text-center">
                <p>You have no orders in waiting.</p>
            </div>
        {% endif %}
    </div>
</section>
{% endblock %}
