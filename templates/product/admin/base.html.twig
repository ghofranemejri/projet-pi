<script>
    function checkStockAlert() {
        fetch('/api/stock/alertes')
            .then(response => response.json())
            .then(data => {
                if (data.length > 0) {
                    let message = " ⚠️ Faible quantité :\n";
                    data.forEach(produit => {
                        message += `🚨${produit.nom} (Qté: ${produit.quantite})\n`;
                    });

                    Swal.fire({
                        title: "Alerte Stock !",
                        text: message,
                        icon: "warning",
                        confirmButtonText: "OK"
                    });
                }
            })
            .catch(error => console.error('Erreur API:', error));
    }

    // Vérifie toutes les 10 secondes
    setInterval(checkStockAlert, 10000);
</script>
