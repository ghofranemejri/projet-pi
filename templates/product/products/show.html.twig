{% extends 'base.html.twig' %}

{% block title %}Product Details{% endblock %}

{% block content %}

<div class="container mt-4">
    <h1>Product Details</h1>
    
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Product #{{ product.id }}</h5>
            
            {% if product.image %}
                <img src="{{ asset(product.image) }}" alt="Product" style="max-width: 300px" class="mb-3">
            {% endif %}
            
            <p class="card-text"><strong>Prix:</strong> {{ product.prix }}</p>
            <p class="card-text"><strong>Quantit√©:</strong> {{ product.quantite }}</p>
            
            {% if product.quantite > 0 %}
                <form action="{{ path('app_cart_add', {'id': product.id}) }}" method="get" class="mb-3">
                    <div class="input-group" style="max-width: 200px">
                        <input type="number" name="quantity" value="1" min="1" max="{{ product.quantite }}" class="form-control">
                        <button type="submit" class="btn btn-primary">Add to Cart</button>
                    </div>
                </form>
            {% else %}
                <p class="text-danger">Out of stock</p>
            {% endif %}
            
            <a href="{{ path('app_products_edit', {'id': product.id}) }}" class="btn btn-warning">Edit</a>
            <a href="{{ path('app_products_index') }}" class="btn btn-secondary">Back to list</a>
            
            <form method="post" action="{{ path('app_products_delete', {'id': product.id}) }}" style="display: inline-block">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
                <button class="btn btn-danger" onclick="return confirm('Are you sure?')">Delete</button>
            </form>
        </div>
    </div>
</div>
{% endblock %}
