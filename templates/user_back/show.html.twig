{% extends 'base2.html.twig' %}

{% block title %}Détails de l'utilisateur{% endblock %}

{% block content %}
    <h1>Détails de l'utilisateur</h1>

    <table class="table">
        <tr>
            <th>Email</th>
            <td>{{ user.email }}</td>
        </tr>
        <tr>
            <th>Roles</th>
            <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
        </tr>
    </table>

    <a href="{{ path('admin_back_user_edit', {'id': user.id}) }}">Modifier</a>
    <form method="post" action="{{ path('admin_back_user_delete', {'id': user.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet utilisateur ?');">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
        <button class="btn btn-danger">Supprimer</button>
    </form>
    <a href="{{ path('admin_users') }}">Retour à la liste</a>
{% endblock %}