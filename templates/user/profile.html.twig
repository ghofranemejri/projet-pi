{% extends 'base.html.twig' %}

{% block title %}Mon Profil{% endblock %}

{% block body %}
    <h1>Mon Profil</h1>

    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Informations personnelles</h5>
            <p class="card-text"><strong>Nom :</strong> {{ user.nom }}</p>
            <p class="card-text"><strong>Prénom :</strong> {{ user.prenom }}</p>
            <p class="card-text"><strong>Email :</strong> {{ user.email }}</p>
            <a href="{{ path('app_user_profile') }}" class="btn btn-primary">Accéder à mon profil</a>
        </div>
    </div>

    <div class="mt-3">
        <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-warning">Modifier mon profil</a>
    </div>
{% endblock %}